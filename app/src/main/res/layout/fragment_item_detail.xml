<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ItemDetailFragment">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView android:layout_width="match_parent"
                       android:layout_height="300dp"
                       android:src="@mipmap/skirt"/>

            <androidx.cardview.widget.CardView
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="15dp"
                            android:gravity="center"
                            android:textColor="@color/adyen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Endomin vegetable test"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:textSize="20dp"
                                android:textColor="@color/adyen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ingredients"
                        />
                        <TextView
                                android:textSize="15dp"
                                android:textColor="@color/adyen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="fat, oil, barley, salt, acidic"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:paddingTop="5dp">

                        <TextView
                                android:textSize="15dp"
                                android:textColor="@color/adyen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price: "

                        />
                        <TextView
                                android:textSize="15dp"
                                android:textColor="@color/adyen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3000 birr"
                        />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="25dp"
                        android:textColor="@color/adyen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount Of Cartoon"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:hint="Amount Of Cartoon"
                        app:hintTextAppearance="@style/Widget.AppCompat.Light.AutoCompleteTextView">

                    <ImageView
                            android:id="@+id/minusImage"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/roundel"
                            android:clickable="true"
                            android:layout_gravity="center"/>

                    <TextView android:layout_width="120dp"
                              android:layout_height="70dp"
                              android:text="48"
                              android:textSize="50sp"
                              app:fontFamily="monospace"
                              android:gravity="center"
                              android:textStyle="bold"
                              android:textColor="#000000"/>

                    <ImageView
                            android:id="@+id/plusImage"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/plus"
                            android:clickable="true"/>


                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">

                    <TextView
                            android:textSize="15dp"
                            android:textColor="@color/adyen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Price"
                    />
                    <TextView
                            android:textSize="15dp"
                            android:textColor="@color/adyen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--Total Price Here--"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>